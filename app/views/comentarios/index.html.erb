<p id="notice"><%= notice %></p>

<h1>Listing Comentarios</h1>

<table>
  <thead>
    <tr>
      <th>Contenido</th>
      <th>Articulo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @comentarios.each do |comentario| %>
      <tr>
        <td><%= comentario.contenido %></td>
        <td><%= comentario.articulo_id %></td>
        <td><%= link_to 'Show', [@articulo ,comentario] %></td>
        <td><%= link_to 'Edit', edit_articulo_comentario_path(@articulo, comentario) %></td>
        <td><%= link_to 'Destroy', [@articulo ,comentario], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

